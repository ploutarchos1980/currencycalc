{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}


{% block body %}

    {% if error %}
        <div id="alertbox" class="container">
            <div id="alertmessage" class="alert alert-danger alert-dismissible fade show position-fixed" role="alert">
                <strong>Warning!</strong> The username or password is incorrect! Please try again or if the problem persists, please contact the administrator.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <script> 
                window.onload = () => { (() => { 
                    setTimeout(function () {
                        document.getElementById("alertbox")?.remove();
                    }, 5000);
                    })(); };
            </script>
        </div>
    {% endif %}


        <div class="container mt-3">
            <div class="row">
                <div class="col text-end"> 
                    <a href="/" class="btn"> Homepage </a>
                </div>
            </div>
        </div>


        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">
                        <div class="login-wrap p-4 p-md-5">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <span class="fa fa-user-o"></span>
                            </div>
                            <h3 class="text-center mb-4">Login</h3>
                            <form action="{{ path('login') }}" class="login-form" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control rounded-left" placeholder="Username" required id="username" name="_username" value="{{ last_username }}" />
                                </div>
                                <div class="form-group d-flex">
                                    <input type="password" class="form-control rounded-left" placeholder="Password" required id="password" name="_password" />
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>


{% endblock %}

